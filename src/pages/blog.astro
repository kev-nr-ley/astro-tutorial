---
import BaseLayout from "@layouts/BaseLayout.astro";
import PostPreviewLayout from "@layouts/PostPreviewLayout.astro";
import "@styles/global.scss";
const pageTitle = "FrankieWeb";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<BaseLayout pageTitle={pageTitle}>
  <h2 class="blog-title">What do I do?</h2>
  <ul class="blog-post-container">
    {
      allPosts.map((post) => (
        <PostPreviewLayout
          title={post.frontmatter.title}
          author={post.frontmatter.author}
          date={post.frontmatter.date}
          description={post.frontmatter.description}
          imageUrl={post.frontmatter.image.url}
          imageAlt={post.frontmatter.image.alt}
        />
      ))
    }
  </ul>
</BaseLayout>
